    </javac>
  	
  	<!-- Copy application resources -->
  	    <copy  todir="${classes.dir}">
  	      <fileset dir="${app.src}" excludes="**/*.java"/>
  	    </copy>
  </target>

  <target name="app-jar" depends="compile-app">
    <jar destfile="${app.build}/${app.name}.jar"
    basedir="${classes.dir}">
      <manifest>
        <attribute name="Main-Class" value="${main-class}" />

        <attribute name="Class-Path"
        value="lib/${commons-httpclient} lib/${commons-codec} lib/${commons-logging}" />
      </manifest>
    </jar>
  </target>
